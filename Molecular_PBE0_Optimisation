&GLOBAL
  PROJECT CP2K
  RUN_TYPE GEO_OPT
  PRINT_LEVEL LOW
  EXTENDED_FFT_LENGTHS TRUE
&END GLOBAL

&FORCE_EVAL
  METHOD QUICKSTEP
  STRESS_TENSOR ANALYTICAL

  &SUBSYS
    &KIND C
      BASIS_SET ORB DZVP-MOLOPT-SR-GTH
      BASIS_SET AUX_FIT cFIT3
      POTENTIAL GTH-PBE-q4
    &END KIND
    &KIND N
      BASIS_SET ORB DZVP-MOLOPT-SR-GTH
      BASIS_SET AUX_FIT cFIT3
      POTENTIAL GTH-PBE-q5
    &END KIND
    &KIND H
      BASIS_SET ORB DZVP-MOLOPT-SR-GTH
      BASIS_SET AUX_FIT cFIT3
      POTENTIAL GTH-PBE-q1
    &END KIND
    &CELL
      ABC 50.0 50.0 50.0
      PERIODIC NONE
    &END CELL
    &TOPOLOGY
      &CENTER_COORDINATES TRUE
      &END CENTER_COORDINATES
      COORD_FILE_NAME POSXYZ.xyz
      COORD_FILE_FORMAT XYZ
    &END TOPOLOGY
  &END SUBSYS

  &DFT
    BASIS_SET_FILE_NAME /work/jpegg/Library/CP2K/Basis_Set/BASIS_MOLOPT
    POTENTIAL_FILE_NAME /work/jpegg/Library/CP2K/Basis_Set/GTH_POTENTIALS
    BASIS_SET_FILE_NAME /work/jpegg/Library/CP2K/Basis_Set/BASIS_ADMM
    BASIS_SET_FILE_NAME /work/jpegg/Library/CP2K/Basis_Set/BASIS_ADMM_MOLOPT
    BASIS_SET_FILE_NAME /work/jpegg/Library/CP2K/Basis_Set/EMSL_BASIS_SETS
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &QS
      METHOD GPW
      EPS_PGF_ORB 1.0E-50
    &END QS
    &AUXILIARY_DENSITY_MATRIX_METHOD
      METHOD BASIS_PROJECTION
      ADMM_PURIFICATION_METHOD MO_DIAG
    &END AUXILIARY_DENSITY_MATRIX_METHOD
    &MGRID
      CUTOFF 350
      REL_CUTOFF 50
    &END MGRID
    &XC
      &XC_FUNCTIONAL PBE0
        &PBE
          SCALE_X 0.75
          SCALE_C 1.0
        &END PBE
        &PBE_HOLE_T_C_LR
          CUTOFF_RADIUS 4.0
        &END PBE_HOLE_T_C_LR
      &END XC_FUNCTIONAL
      &HF
        FRACTION 0.25
        &SCREENING
          EPS_SCHWARZ 1.0E-6
        &END SCREENING
        &INTERACTION_POTENTIAL
          CUTOFF_RADIUS 4.0
          POTENTIAL_TYPE TRUNCATED
          T_C_G_DATA /work/jpegg/Library/CP2K/Basis_Set/t_c_g.dat
        &END INTERACTION_POTENTIAL
      &END HF
      &vdW_POTENTIAL
         DISPERSION_FUNCTIONAL PAIR_POTENTIAL
         &PAIR_POTENTIAL
            TYPE DFTD3(BJ)
            CALCULATE_C9_TERM .TRUE.
            REFERENCE_C9_TERM .TRUE.
            LONG_RANGE_CORRECTION .TRUE.
            PARAMETER_FILE_NAME /work/jpegg/Library/CP2K/Basis_Set/dftd3.dat
            REFERENCE_FUNCTIONAL PBE0
            R_CUTOFF 8.
            EPS_CN 0.01
            D3BJ_SCALING 0 0 0 0
         &END PAIR_POTENTIAL
      &END vdW_POTENTIAL
    &END XC
    &SCF
      SCF_GUESS ATOMIC
      MAX_SCF 500
      EPS_SCF 1.0E-6
      &MIXING
         METHOD BROYDEN_MIXING
         ALPHA 0.1
         BETA 1.5
         NBROYDEN 8
      &END MIXING
      &OT ON
        CHOLESKY INVERSE
        MINIMIZER CG
      &END OT
    &END SCF
  &END DFT

  &PRINT
    &FORCES ON
    &END FORCES
  &END PRINT
&END FORCE_EVAL

&MOTION
  &GEO_OPT
    TYPE MINIMIZATION
    MAX_DR    1.0E-03
    MAX_FORCE 1.0E-03
    RMS_DR    1.0E-03
    RMS_FORCE 1.0E-03
    MAX_ITER 200
    OPTIMIZER CG
    &CG
      MAX_STEEP_STEPS  0
      RESTART_LIMIT 9.0E-01
    &END CG
  &END GEO_OPT
&END MOTION
